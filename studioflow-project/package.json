{
  "name": "studioflow-project",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "setup:mcp-client": "bash scripts/setup-project.sh",
    "build:tokens": "node scripts/build-tokens.mjs",
    "report:token-coverage": "node scripts/report-token-coverage.mjs",
    "verify:no-hardcoded": "node scripts/verify-no-hardcoded.mjs",
    "verify:id-sync": "node scripts/verify-id-sync.mjs",
    "verify:tokens-sync": "node scripts/verify-tokens-sync.mjs",
    "test:contracts": "node scripts/test-canvas-contracts.mjs",
    "loop:code-to-canvas": "node scripts/loop-code-to-canvas.mjs",
    "conduit:generate": "npm run build:tokens && npm run loop:code-to-canvas",
    "conduit:preview": "node scripts/conduit-preview.mjs",
    "conduit:commit": "node scripts/conduit-commit.mjs",
    "conduit:doctor": "node scripts/conduit-doctor.mjs",
    "loop:verify-canvas": "node scripts/loop-verify-canvas.mjs",
    "loop:canvas-to-code": "node scripts/loop-canvas-to-code.mjs",
    "loop:figma-roundtrip": "node scripts/loop-figma-roundtrip.mjs",
    "loop:figma-roundtrip:apply": "node scripts/loop-figma-roundtrip.mjs --apply",
    "demo:website:generate": "node scripts/demo-website-generate-customizations.mjs",
    "demo:website:verify": "STUDIOFLOW_INPUT=handoff/demo-website-canvas-to-code.json npm run loop:verify-canvas",
    "demo:website:apply": "STUDIOFLOW_INPUT=handoff/demo-website-canvas-to-code.json npm run loop:canvas-to-code",
    "demo:website:run": "node scripts/demo-website-run.mjs",
    "demo:website:capture": "npm run demo:website:run && npm run loop:proof",
    "loop:run": "npm run loop:code-to-canvas && npm run loop:verify-canvas && npm run loop:canvas-to-code && npm run check && npm run build && npm run manifest:update",
    "loop:proof": "node scripts/loop-proof.mjs",
    "setup:project": "bash scripts/setup-project.sh",
    "check": "npm run verify:tokens-sync && npm run verify:no-hardcoded && npm run verify:id-sync && tsc --noEmit",
    "snapshot:figma": "node scripts/snapshot-figma.mjs",
    "manifest:update": "node scripts/manifest-update.mjs",
    "assets:brand": "node scripts/generate-brand-assets.mjs",
    "verify:copy-tone": "node scripts/verify-public-copy-tone.mjs",
    "build:figma-plugin": "node scripts/build-figma-plugin.mjs",
    "bridge": "node scripts/studioflow-bridge.mjs"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "glob": "^10.3.10",
    "playwright": "^1.58.2",
    "style-dictionary": "^3.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "ws": "^8.19.0"
  }
}
