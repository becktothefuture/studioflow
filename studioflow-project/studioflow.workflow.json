{
  "workflowVersion": "3.0.0",
  "integration": "canvas-central",
  "canvas": {
    "providers": ["figma-sites", "figma-make"],
    "canonicalProvider": "figma-sites",
    "exploratoryProvider": "figma-make",
    "promotionRule": "Only verified figma-make explorations can be promoted into the figma-sites canonical loop."
  },
  "modelPolicy": {
    "profile": "max-quality",
    "defaultModel": "opus",
    "planningModel": "opus",
    "executionFallback": "sonnet",
    "lightweightModel": "haiku"
  },
  "compatibility": {
    "enableFigmaAliases": true
  },
  "tokenFrames": [
    {
      "name": "Tokens / Colors",
      "prefixes": ["color"]
    },
    {
      "name": "Tokens / Typography",
      "prefixes": ["font"]
    },
    {
      "name": "Tokens / Spacing",
      "prefixes": ["space", "size", "radius", "shadow", "opacity", "z"]
    }
  ],
  "breakpoints": [
    {
      "name": "mobile",
      "label": "Mobile",
      "width": 390
    },
    {
      "name": "tablet",
      "label": "Tablet",
      "width": 768
    },
    {
      "name": "laptop",
      "label": "Laptop",
      "width": 1280
    },
    {
      "name": "desktop",
      "label": "Desktop",
      "width": 1440
    }
  ],
  "exchangeFiles": {
    "codeToCanvas": "handoff/code-to-canvas.json",
    "canvasToCode": "handoff/canvas-to-code.json",
    "canvasToCodeTemplate": "handoff/canvas-to-code.template.json",
    "codeToFigma": "handoff/code-to-figma.json",
    "figmaToCode": "handoff/figma-to-code.json",
    "figmaToCodeTemplate": "handoff/figma-to-code.template.json",
    "breakpointVariables": "tokens/figma-breakpoint-variables.json"
  }
}
